#include<stdio.h>
#include<string.h>
void main()
{
char s[100],rev[100],temp;
int i,l;
i=0;
printf("Enter the string to be reversed: \n");
gets(s);
l=strlen(s)-1;
for(i-0;i<=l;i++)
{
rev[i]=s[l-i];
}
printf("The string after reversing is: ");
puts(rev);
}

#include<stdio.h>
#include<string.h>
void main()
{
char s1[100],s2[100],s3[100];
int i,j,len;
i=0,j=0,len;
printf("Enter string 1:\n");
gets(s1);
printf("Enter string 2:\n");
gets(s2);
while(s1[i]!='\0')
{s3[j]=s1[i];
i++;
j++;}
i=0;
while(s2[i]!='\0')
{s3[j]=s2[i];
i++;
j++;}
s3[j]='\0';
i=0,len=0;
while(s3[i]!='\0')
{
len++;
i++;
}
printf("The concatenated string is: ");
puts(s3);
printf("\n The length of the concatenated string = %d",len);
}


#include<stdio.h>
#include<string.h>
void main()
{
char s1[100],s2[100];
int i,l;
i=0;
printf("Enter a string: \n");
gets(s1);
while(s1[i]!='\0')
{
    s2[i]=s1[i];
    i++;
}
s2[i]='\0';
l=0,i=0;
while(s2[i]!='\0')
{
    l++;
    i++;
}
printf("The copied string is :");
puts(s2);
printf("The length of the copied string = %d\n",l);
}
